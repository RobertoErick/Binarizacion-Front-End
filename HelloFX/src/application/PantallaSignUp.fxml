<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SceneRegisterController">
   <children>
      <ImageView fitHeight="404.0" fitWidth="604.0" layoutX="128.0">
         <image>
            <Image url="@../Imagenes/Escena%20principal/imagen%20fondo.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="404.0" fitWidth="732.0">
         <image>
            <Image url="@../Imagenes/Escena%20principal/filtro.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="404.0" fitWidth="349.0">
         <image>
            <Image url="@../Imagenes/Escena%20principal/fondo%20lateral.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="404.0" fitWidth="349.0">
         <image>
            <Image url="@../Imagenes/Escena%20principal/lateral.png" />
         </image>
      </ImageView>

      <TextField fx:id="txtUsuarioRegistro" layoutX="28.0" layoutY="101.0" prefHeight="38.0" prefWidth="200.0" promptText="Usuario" />
      <PasswordField fx:id="txtContrasenaRegistro" layoutX="28.0" layoutY="172.0" prefHeight="38.0" prefWidth="200.0" promptText="Contraseña" />
      <PasswordField fx:id="txtConfirmContrasena" layoutX="28.0" layoutY="243.0" prefHeight="38.0" prefWidth="200.0" promptText="Contraseña" />
      <Label fx:id="lblMensaje" layoutX="45.0" layoutY="282.0" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: white;" text="">
         <font>
            <Font size="14.0" />
         </font></Label>
      
      <!-- Botón de iniciar sesión -->
      <Button fx:id="btnRegistro" layoutX="28.0" layoutY="311.0" mnemonicParsing="false" onAction="#registro" prefHeight="26.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 3px;" text="Registrarse" textAlignment="CENTER" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      
      <!-- Label que sirve como botón para registrarse -->
      <Button fx:id="btnSwitchLogin" alignment="CENTER" layoutX="28.0" layoutY="342.0" onAction="#switchPantallaLogin" prefHeight="26.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="¿Ya tienes cuenta? Inicia sesión">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Label layoutX="28.0" layoutY="19.0" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: white;" text="Regístrate">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="28.0" layoutY="74.0" prefHeight="26.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: white;" text="Usuario">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="28.0" layoutY="146.0" prefHeight="26.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: white;" text="Contraseña">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="28.0" layoutY="217.0" prefHeight="26.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: white;" text="Confirmar contraseña">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <ImageView fx:id="imgPasswordWrong" fitHeight="13.0" fitWidth="12.0" layoutX="30.0" layoutY="286.0" visible="false">
         <image>
            <Image url="@../Imagenes/Escena%20Registro/boton-x.png" />
         </image>
      </ImageView>
     
      </children>
</AnchorPane>
